    <form action="/register" method="post">
      <div class="row mb-4">
    <div class="col-md-6 mb-4">
          <div class="form-outline">
            <input
              type="text"
              id="form6Example1"
              class="form-control"
              name="fName"
              value="<%= findUser.fName %>"
              disabled
            />
            <label class="form-label" for="form6Example1">First name</label>
          </div>
        </div>
    <div class="col-md-6 mb-4">
          <div class="form-outline">
            <input
              type="text"
              id="form6Example2"
              class="form-control"
