        </div>
      </div>
  <div class="row ">
        <div class="col-md-6 mb-4 ">
          <div class="form-outline">
            <input
              type="text"
              id="form6Example1"
              class="form-control"
              name="email"
              value="<%= findUser.email %>"
              disabled
            />
            <label class="form-label" for="form6Example1">Email</label>
          </div>
        </div>
        <div class="col-md-6 ">
          <div class="form-outline">
            <input
              type="text"
              id="form6Example2"
              class="form-control"
              name="contact"
              value="<%= findUser.contact %>"
              disabled
            />
            <label class="form-label" for="form6Example2">Contact</label>
          </div>
        </div>
      </div>
      <div class="row ">
        <div class="col-md-6 mt-4 ">
          <div class="form-outline">
            <input
              type="text"
              id="form6Example1"
              class="form-control"
              name="digitalAddress"
              value=""
            />
            <label class="form-label" for="form6Example1"
              >Digital Address</label
            >
          </div>
        </div>
        <div class="col-md-6 mt-4 mb-4">
          <div class="form-outline">
            <input
              type="text"
              id="form6Example2"
              class="form-control"
              name="Address"
              value=""
            />
            <label class="form-label" for="form6Example2"
              >Residential Address</label
            >
          </div>
        </div>
      </div>

